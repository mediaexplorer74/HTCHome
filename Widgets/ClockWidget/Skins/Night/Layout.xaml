<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WidgetStyle" TargetType="UserControl">
        <Setter Property="Width" Value="220"/>
        <Setter Property="Height" Value="220"/>
    </Style>
    <Style x:Key="ClockBase" TargetType="Image"/>
    
    <Style x:Key="DayGrid" TargetType="Grid">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="-90,0,0,0"/>
    </Style>
    <Style x:Key="DayShadow" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#5b5b5d"/>
        <Setter Property="Margin" Value="1,1,0,0"/>
        <Setter Property="Opacity" Value="0.7"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>
    <Style x:Key="Day" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style x:Key="MonthGrid" TargetType="Grid">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="80,0,0,0"/>
    </Style>
    <Style x:Key="MonthShadow" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#5b5b5d"/>
        <Setter Property="Margin" Value="1,1,0,0"/>
        <Setter Property="Opacity" Value="0.7"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>
    <Style x:Key="Month" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style x:Key="AmPmGrid" TargetType="Grid">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,110,0,0"/>
    </Style>
    <Style x:Key="AmPmShadow" TargetType="TextBlock">
        <Setter Property="Visibility" Value="Collapsed"/>
    </Style>
    <Style x:Key="AmPm" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#5b5b5d"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style x:Key="ClockHour" TargetType="Image">
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
    </Style>
    <Style x:Key="ClockMinute" TargetType="Image">
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
    </Style>
    <Style x:Key="ClockSecond" TargetType="Image">
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
    </Style>
    <Style x:Key="ClockDot" TargetType="Image">
        <Setter Property="Margin" Value="3,5,0,0"/>
        <Setter Property="Width" Value="45"/>
        <Setter Property="Height" Value="44"/>
    </Style>
</ResourceDictionary>